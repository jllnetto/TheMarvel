<div class="row">
    <div class="col-lg-12">
        @if (Convert.ToInt32(ViewBag.total_lista) > 0)
        {
            <div class="row">
                <!-- Elemento comic -->
                @foreach (var comic in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="@comic.Pic_url" alt="@comic.Titulo"></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@comic.Wiki_url" target="_blank">@comic.Titulo</a>
                                </h4>
                                <h5>USD$ @comic.Preco</h5>
                                <p class="card-text">@comic.Descricao</p>
                            </div>
                            <div class="card-footer">
                                <!-- Botão excluir comic -->
                                <a href="/Comic/ExcluirComic/?id_comic_marvel=@comic.Id_marvel" type="button" class="btn btn-danger btn-sm" title="Excluir cópia local"><i class="fas fa-trash-alt"></i></a>

                            </div>
                        </div>
                    </div>
                }
                <!-- /Elemento comic -->
            </div>
            <!-- Paginador -->
        }
        else
        {
            <h1>Nenhuma comic encontrada.</h1>
            <br />
            <br />
        }
    </div>
</div>
