<div class="row">
    <div class="col-lg-12">

        <!-- Elemento personagem -->
        @if (Convert.ToInt32(ViewBag.total_lista) > 0)
        {
            <div class="row">
                @foreach (var personagem in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="@personagem.Pic_url" alt="@personagem.Nome"></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@personagem.Wiki_url" target="_blank">@personagem.Nome</a>
                                </h4>
                                <p class="card-text">@personagem.Descricao</p>
                            </div>
                            <div class="card-footer">
                                <!-- Botão listar comics -->
                                <a href="/Comic/Index/?id_personagem=@personagem.Id_marvel&limit=21&offset=0" type="button" class="btn btn-primary btn-sm" title="Comics"><i class="far fa-newspaper"></i></a>
                                <!-- Botão excluir personagem -->
                                <a href="/Personagem/ExcluirPersonagem/?id_personagem_marvel=@personagem.Id_marvel" type="button" class="btn btn-danger btn-sm" title="Excluir cópia local"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </div>
                    </div>
                }
                <!-- /Elemento personagem -->
            </div>
        }
        else
        {
            <h1> Nenhum personagem encontrado.</h1>
            <br />
            <br />
        }
    </div>
</div>
